<div class="container-fluid content">
  <div class="row-fluid">
    <div class="span4 first-section">
      <div class="media">
        <div class="pull-center">
          <% if @user.avatar? %>
            <%= image_tag @user.avatar.url %>
          <% end %>
          <h2 class="media-body"><%= @user.name %></h2>
        </div>

        <canvas id="summary-chart"></canvas>

         <div class="btn-group">
          <button type="button" class="btn btn-default" id="week-button">Week</button>
          <button type="button" class="btn btn-default" id="month-button">Month</button>
          <button type="button" class="btn btn-default" id="year-button">Year</button>
        </div>

         
      </div>
    </div>


    <div class="span8 second-section">
      <h3> Vegetables consumed </h3>
      <div class="progress percentage"> 
        <div class="bar" style="width: <%= @vegetables.sum('count').to_f / 10.0 * 100 %>%"></div><span class="numbar"> <%= @vegetables.sum('count').to_f / 10.0 * 100 %>% </span>
      </div>
      <% if current_user == @user %>
        <%= form_for Vegetable.new, html: { class: "form-inline" } do |form| %>
          <%= form.text_field :name, class: "form-control", placeholder: "name" %>
          <%= form.number_field :count, class: "input-small", placeholder: "count" %>
          <%= form.submit :add, class: "btn btn-default" %>
        <% end %> 
      <% end %>
      
    

      <h3> Fruit consumed </h3>
       <div class="progress percentage"> 
        <div class="bar" style="width: <%= @fruits.sum('count').to_f / 10.0 * 100 %>%"></div><span class="numbar"> <%= @fruits.sum('count').to_f / 10.0 * 100 %>% </span>
      </div>

      <% if current_user == @user %>
        <%= form_for Fruit.new, html: { class: "form-inline" } do |form| %>
          <%= form.text_field :name, class: "form-control", placeholder: "name" %>
          <%= form.number_field :count, class: "input-small", placeholder: "count" %>
          <%= form.submit :add, class: "btn btn-default" %>
        <% end %> 
      <% end %>
     

   
      <h3> Activities </h3>
      <div class="progress percentage"> 
        <div class="bar" style="width: <%= @activities.sum('count').to_f / 60.0 * 100 %>%"></div><span class="numbar"> <%= @activities.sum('count').to_f / 10.0 * 100 %>% </span>
      </div>
      <% if current_user == @user %>
        <%= form_for Activity.new, html: { class: "form-inline" } do |form| %>
          <%= form.text_field :name, class: "form-control", placeholder: "name" %>
          <%= form.number_field :count, class: "input-small", placeholder: "number of minutes" %>
          <%= form.submit :add, class: "btn btn-default" %>
        <% end %> 
      <% end %>
      
  
    <h3> Relaxtion </h3>
     <div class="progress percentage"> 
      <div class="bar" style="width: <%= @relaxations.sum('count').to_f / 60.0 * 100 %>%"></div><span class="numbar"> <%= @relaxations.sum('count').to_f / 10.0 * 100 %>% </span>
    </div>
    <% if current_user == @user %>
      <%= form_for Relaxation.new, html: { class: "form-inline" } do |form| %>
        <%= form.text_field :name, class: "form-control", placeholder: "form of relaxation" %>
        <%= form.number_field :count, class: "input-small", placeholder: "number of minutes" %>
        <%= form.submit :add, class: "btn btn-default" %>
      <% end %> 
    <% end %>
   

     <h3> Hours slept </h3>
    <div class="progress percentage"> 
      <div class="bar" style="width: <%= @sleeps.sum('count').to_f / 10.0 * 100 %>%"></div><span class="numbar"> <%= @sleeps.sum('count').to_f / 10.0 * 100 %>% </span>
    </div>  
     <% if current_user == @user %>
      <%= form_for Sleep.new, html: { class: "form-inline" } do |form| %>
        <%= form.text_field :count, class: "form-control", placeholder: "number of hours" %>
        <%= form.submit :add, class: "btn btn-default" %>
      <% end %> 
    <% end %>
  </div>
</div>

